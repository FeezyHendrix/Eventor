  <title><%= @display_name %> Profile</title>

  <div class="container">
    <div class="row">
      <div class="col-md-9 col-md-offset-3 text-center">
        <h1><%= @display_name  %> Profile</h1>
        <hr>
      </div>
    </div>
  </div>

  <!-- Page Content -->
  <div class="container">
      <div class="row">
          <div class="col-md-3 text-center" style="padding-top: 10px;">
            <h4><b>Account</b></h4>
            <div class="list-group">
              <%= link_to "Edit Account", edit_user_path, class: "list-group-item" %>
              <%= link_to "Logout", edit_user_path, class: "list-group-item" %>
            </div>

            <h4><b>Filter Events by Condition</b></h4>
              <div class="list-group">
                <%= form_tag @user, method: :get do %>
                  <%= submit_tag "#{@display_name} Upcoming Events", name: "timeline", id: "timeline", class: "list-group-item", style: "width: 100%" %>
                  <%= submit_tag "#{@display_name} Past Events", name: "timeline", id: "timeline", class: "list-group-item", style: "width: 100%" %>    
                  <% if @special %>
                  <%= submit_tag "Events #{@special} Attending", name: "timeline", id: "timeline", class: "list-group-item", style: "width: 100%" %>    
                  <% else %>
                  <% @display_name = "#{@user.name} is" if @display_name == "#{@user.name}'s" %>
                  <%= submit_tag "Events #{@display_name} Attending", name: "timeline", id: "timeline", class: "list-group-item", style: "width: 100%" %>  
                  <%  @display_name = "#{@user.name}'s" %>
                  <% end %>
                <% end %>
              </div>
          </div>

          <div class="col-md-9 text-center">
              <div class="row">
                <h3><%= @title %></h3>
                <div>(<%= page_entries_info(@events) %>)</div>
                <%= will_paginate(@events) %><br>
                <% if @events.any? %>
                  <%= render @events %>
                <% end %>
                <%= will_paginate(@events) %>
              </div>
          </div>
      </div>
  </div>
  
  <style type="text/css">
    .pagination{
      margin-top: 5px; 
      margin-bottom: 5px;
    }
  </style>

