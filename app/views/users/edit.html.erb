  <title>Eventor | Edit</title>

  <div class="container text-center">
    <div class="row">
      <h3>Edit Account</h3>
      (Leave password fields blank if not changing password)
      <hr>
    </div>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>  
      <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: "form-control" %><br>
        </div>
      </div>  

      <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
          <%= f.label :email %><br>
          <%= f.email_field :email, class: "form-control" %><br>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
          <%= f.label :password %><br>
          <%= f.password_field :password, class: "form-control" %><br>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
          <%= f.label :password_confirmation, "Password Confirmation" %><br>
          <%= f.password_field :password_confirmation, class: "form-control" %><br>
        </div>
      </div>

      <%= f.submit "Edit", class: "btn btn-primary" %><br><br>
    <% end %>
  </div>