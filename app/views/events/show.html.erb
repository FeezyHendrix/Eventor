                <!-- Title -->
                <h1 style="text-align:center;"><%= @event.title %></h1>
                <hr>

                <!-- Author -->
                <p class="lead" style="text-align:center;">
                    Created by: <%= link_to @event.user.name, @event.user %>
                </p>

                <!-- Date/Time -->
                <p class="lead" style="text-align:center;"><i class="fa fa-calendar"></i> Event Date: <%= @event.date.to_formatted_s(:long_ordinal) %></p>

                <!-- Preview Image -->
                <img class="img-responsive" src="http://placehold.it/900x300" alt=""><br>

                <!-- Post Content -->
                <p class="lead">Event Description: <%= @event.description %></p><br>

                <% if current_user && @event.date > Time.now%>
        				  <% unless current_user.id == @creator.id %>
        				  	<div id="attend_form" >
          					  <% if current_user.attending?(@event) %>
          					  	<%= render "unattend" %>
          					  <% else %>
          					  	<%= render "attend" %>
          					  <% end %>
        						</div>
        					<% else %>	
        					  <p class="lead" style="text-align:center;"><%= link_to "Edit Event", edit_event_path(@event), class: "btn btn-primary", style: "margin-right: 20px;" %><%= link_to "Delete Event", @event, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-primary" %></p>
        					<% end %>
        				<% end %><br>

                <% if !current_user %>  
                  <p class="lead" style="text-align:center; color: red;">(Please log in or sign up to attend this event)</p>
                <% end %><br>

        			  <p class="lead" style="text-align:center;">People attending this event (<span id="attendees"><%= @event.attendees.count %></span>)</h1>
        			  <hr>
        			  <div id="users_attending">
        			  	<% if @event.attendees.any? %>
        				  	<% @event.attendees.each do |user| %>
        						  <li style="text-align:center; list-style: none;">Name: <%= link_to user.name, user %></li>
        					<% end %>
        				<% end %>
        			</div>

